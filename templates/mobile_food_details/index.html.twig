{% extends 'base.html.twig' %}

{% block title %}Hello MobileFoodDetailsController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Mobile food details:</h1>
    <ul class="details">
        <li><strong>Applicant:</strong> {{ item.applicant }}</li>
        <li><strong>Type:</strong> {{ item.facilitytype }}</li>
        <li><strong>Address:</strong> {{ item.address }}</li>
        <li><strong>status:</strong> {{ item.status }}</li>
        <li><strong>items:</strong> {{ item.fooditems }}</li>
    </ul>
</div>
{% endblock %}
